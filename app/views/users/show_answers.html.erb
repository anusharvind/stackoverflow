<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
        <%= render 'shared/stats' %>
      </section>
  </aside>
  <div class="col-md-8">
    <% if @answers.any? %>
      <h3>Answers by <%= @user.name %></h3>
      <ul class="users questions">
        <%= render @answers %>
      </ul>
      <%= will_paginate @answers %>
    <% else %>
      <h3>No answers yet</h3>
    <% end %>
  </div>
</div>