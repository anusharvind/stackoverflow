<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    <% if current_user?(@user) %>
      <section class="question_form">
        <%= render 'shared/question_form' %>
      </section>
    <% end %>
  </aside>
  <div class="col-md-8">
    <% if @user.questions.any? %>
      <h3>Questions (<%= @user.questions.count %>)</h3>
      <ol class="questions">
        <%= render @questions %>
      </ol>
      <%= will_paginate @questions %>
    <% end %>
  </div>
</div>