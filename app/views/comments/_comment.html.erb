<li id="comment-<%= comment.id %>">
  <span class="content"><%= comment.content %></span>
  &nbsp;- <%= link_to comment.user.name, comment.user %></span> | Posted <%= time_ago_in_words(comment.created_at) %> ago.
  <% if current_user?(comment.user) %>
      | <%= link_to "delete", comment_path(commentid: comment.id), method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
</li>