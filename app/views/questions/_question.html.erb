<li id="question-<%= question.id %>">
  <span class="content"><%= link_to question.title, question %></span>
   &nbsp;- <%= link_to question.user.name, question.user %></span> | 
  Posted <%= time_ago_in_words(question.created_at) %> ago
  <% if current_user?(question.user) %>
      | <%= link_to "delete", question, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
</li>