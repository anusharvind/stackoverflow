<%= form_for(@question) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder: "Title of your question..." %>
    <%= f.text_area :content, placeholder: "Ask your question..." %>
  </div>
  <%= f.submit "Ask", class: "btn btn-primary" %>
<% end %>